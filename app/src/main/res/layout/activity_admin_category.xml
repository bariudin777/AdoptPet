<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new Animal"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="388dp"
        android:layout_height="205dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dogs"
            android:layout_width="146dp"
            android:layout_height="match_parent"
            android:src="@drawable/dog_icon" />

        <ImageView
            android:id="@+id/cats"
            android:layout_width="127dp"
            android:layout_height="109dp"
            android:src="@drawable/cat_logo" />

        <ImageView
            android:id="@+id/bunny"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bunny_icon" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="388dp"
        android:layout_height="205dp"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/parrots"
            android:layout_width="100dp"
            android:layout_height="133dp"
            android:src="@drawable/parrot_icon" />

        <ImageView
            android:id="@+id/hamster"
            android:layout_width="141dp"
            android:layout_height="139dp"
            android:src="@drawable/hamster_icon" />

        <ImageView
            android:id="@+id/snakes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/sanke_icon" />


    </LinearLayout>

</RelativeLayout>